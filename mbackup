#!/usr/bin/env bash

cat <<EOF
  ################
  ##  M.BACKUP  ##
  ################
EOF

source "./util.sh"

mkdir ./data &>/dev/null

cat <config | while read -r entry; do
	fll "$(tput cols)" -

	# Comment lines
	if [[ "${entry:0:1}" == "#" ]]; then continue; fi

	# Empty lines
	if [[ -z $entry ]]; then continue; fi

	dest=$(serialize "$entry")

	echo ">: $dest"

	cp -rv "$entry" "$dest"
done
